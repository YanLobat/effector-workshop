{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "experimentalDecorators": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "keyofStringsOnly": true,
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": false
}
